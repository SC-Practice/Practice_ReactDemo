@{
    ViewBag.Title = "IndexJSXWithBabel";
}

<h2>IndexJSXWithBabel</h2>

<!-- ADd Html & Script -->
<div id="root">
    <!-- This DOM is for React inject.-->
</div>

<!-- use type="text/babel to let babel compiler to ES5 -->
<script type="text/babel">
    ReactDOM.render(
        <h3>Hello, world!</h3>,
        document.getElementById('root')
    );
</script>